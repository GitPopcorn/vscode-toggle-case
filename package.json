{
	"name": "toggle-case",
	"displayName": "Toggle Case",
	"author": {
		"name": "Pranshu Agrawal",
		"email": "pranshu.a.11@gmail.com",
		"url": "https://pranshu.works"
	},
	"publisher": "PranshuAgrawal",
	"description": "Toggle through various cases on a key press",
	"license": "MIT",
	"icon": "images/logo128x128.jpg",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Formatters",
		"Keymaps",
		"Other"
	],
	"keywords": [
		"change case",
		"case",
		"uppercase",
		"lowercase",
		"toggle case"
	],
	"activationevents": [
		"*",
		"onCommand:toggleCase.toggleCase"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/pranshuagrawal/vscode-toggle-case.git"
	},
	"badges": [{
		"description": "Build Status",
		"href": "https://travis-ci.org/github/pranshuagrawal/vscode-toggle-case",
		"url": "https://api.travis-ci.org/pranshuagrawal/vscode-toggle-case.svg?branch=master"
	}],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "toggleCase.toggleCase",
				"title": "Toggle Case"
			}
		],
		"keybindings": [
			{
				"command": "toggleCase.toggleCase",
				"key": "ctrl+m",
				"mac": "cmd+m",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"title": "Toggle Case",
			"properties": {
				"toggleCase.case.upperCase": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "Check to keep `UPPERCASE` formatting in loop"
				},
				"toggleCase.case.lowerCase": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "Check to keep `lowercase` formatting in loop"
				},
				"toggleCase.case.titleCase": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "Check to keep `Title Case` formatting in loop"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"deploy": "vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vsce": "^1.77.0",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"change-case": "^4.1.1"
	}
}
