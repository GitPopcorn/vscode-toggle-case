{
	"name": "toggle-case",
	"displayName": "Toggle Case",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:toggleCase.toggleCase"
	],
	"icon": "images/icon.jpg",
	"repository": { 
		"type": "git", 
		"url": "https://github.com/pranshuagrawal/vscode-toggle-case.git" 
	},
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "toggleCase.toggleCase",
				"title": "Toggle Case"
			}
		],
		"keybindings": [
			{
				"command": "toggleCase.toggleCase",
				"key": "ctrl+m",
				"mac": "cmd+m",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"title": "Toggle Case",
			"properties": {
				"toggleCase.case.upperCase": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "Check to keep `UPPERCASE` formatting in loop"
				},
				"toggleCase.case.lowerCase": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "Check to keep `lowercase` formatting in loop"
				},
				"toggleCase.case.titleCase": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "Check to keep `Title Case` formatting in loop"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"change-case": "^4.1.1"
	}
}
